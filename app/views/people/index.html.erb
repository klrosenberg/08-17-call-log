<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<a href="/make_call">Call</a>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Last call</th>
      <th>Last attempt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.number %></td>
        <td><%= person.last_call %></td>
        <td><%= person.last_attempt %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

